<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF8F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvConversionSeleccionada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Seleccione una opciÃ³n"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#6B5B95"
        android:background="#F0E6FF"
        android:padding="16dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolumen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Volumen"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A8E6CF"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btnTemperatura"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConversionSeleccionada"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnTemperatura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temperatura"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFB3BA"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVolumen"
        app:layout_constraintTop_toTopOf="@+id/btnVolumen"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnMasa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Masa"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BAFFC9"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btnLongitud"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolumen"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/btnLongitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Longitud"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFBA"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMasa"
        app:layout_constraintTop_toTopOf="@+id/btnMasa"
        app:layout_constraintWidth_percent="0.45" />

    <EditText
        android:id="@+id/etCifra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:digits="0123456789."
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#6B5B95"
        android:textColorHint="#B39BC8"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMasa"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resultado"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6B5B95"
        android:background="#E8F5E8"
        android:padding="16dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCifra"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btnConvertir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Convertir"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B39BC8"
        android:textStyle="bold"
        android:textSize="18sp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultado"
        app:layout_constraintWidth_percent="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>